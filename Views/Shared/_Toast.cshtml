@model Monolypix.Models.Result<object>

@if (Model != null && !string.IsNullOrEmpty(Model.Message))
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div class="toast @(Model.Success ? "border-success" : "border-danger")" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
            <div class="toast-header @(Model.Success ? "bg-success" : "bg-danger") text-white">
                <i class="fas @(Model.Success ? "fa-check-circle" : "fa-exclamation-circle") me-2"></i>
                <strong class="me-auto">@(Model.Success ? "Sucesso" : "Erro")</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @Model.Message
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var toastEl = document.querySelector('.toast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
}
