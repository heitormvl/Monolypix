@model Monolypix.ViewModels.SendMoneyViewModel

@{
    ViewData["Title"] = "Enviar Dinheiro";
}

@if (TempData["ResultMessage"] != null)
{
    var result = new Monolypix.Models.Result<object>
    {
        Success = (bool)(TempData["ResultSuccess"] ?? false),
        Message = TempData["ResultMessage"]?.ToString() ?? string.Empty
    };
    if (!result.Success)
    {
        await Html.RenderPartialAsync("_Toast", result);
    }
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">
                <i class="fas fa-paper-plane me-2"></i>
                Enviar Dinheiro
            </h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Voltar
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Enviando para: @Model.ToUserName
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SendMoney" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ToUserId" />
                        <input type="hidden" asp-for="ToUserName" />
                        
                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>
                                @Html.DisplayNameFor(m => m.Amount)
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" 
                                       type="number" 
                                       step="0.01" 
                                       min="0.01"
                                       class="form-control" 
                                       placeholder="0,00"
                                       autofocus />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-comment me-1"></i>
                                @Html.DisplayNameFor(m => m.Description)
                            </label>
                            <input asp-for="Description" 
                                   class="form-control" 
                                   placeholder="Ex: Aluguel, Compra de propriedade..."
                                   maxlength="250" />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>
                                Enviar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
