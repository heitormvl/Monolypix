@model Monolypix.ViewModels.ChargeMoneyViewModel

@{
    ViewData["Title"] = "Cobrar Jogadores";
}

@if (TempData["ResultMessage"] != null)
{
    var result = new Monolypix.Models.Result<object>
    {
        Success = (bool)(TempData["ResultSuccess"] ?? false),
        Message = TempData["ResultMessage"]?.ToString() ?? string.Empty
    };
    if (!result.Success)
    {
        await Html.RenderPartialAsync("_Toast", result);
    }
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">
                <i class="fas fa-hand-holding-usd me-2"></i>
                Cobrar Jogadores
            </h1>
            <p class="text-muted mb-0">
                Crie uma cobrança para todos os jogadores da sessão.
            </p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Voltar
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-crown me-2"></i>
                        Cobrança Bancária
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Charge" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="GameSessionId" />
                        
                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>
                                @Html.DisplayNameFor(m => m.Amount)
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" 
                                       type="number" 
                                       step="0.01" 
                                       min="0.01"
                                       class="form-control" 
                                       placeholder="0,00"
                                       autofocus />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-comment me-1"></i>
                                @Html.DisplayNameFor(m => m.Description)
                            </label>
                            <input asp-for="Description" 
                                   class="form-control" 
                                   placeholder="Ex: Taxa, Imposto, Multa..."
                                   maxlength="250" />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Lista de jogadores que serão cobrados -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-users me-1"></i>
                                Jogadores na Sessão
                            </label>
                            <div class="list-group">
                                @foreach (var player in Model.Players)
                                {
                                    <div class="list-group-item d-flex align-items-center">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" 
                                             style="width: 35px; height: 35px; background-color: @player.AvatarColor;">
                                            <i class="fas fa-user text-white small"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <span>@player.UserName</span>
                                            @if (player.IsBanker)
                                            {
                                                <span class="badge bg-warning text-dark ms-2">Banqueiro</span>
                                            }
                                        </div>
                                        <span class="text-success fw-bold">
                                            $@(player.Wallet?.Balance.ToString("N2") ?? "0,00")
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-hand-holding-usd me-2"></i>
                                Criar Cobrança
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
