@model IEnumerable<Monolypix.ViewModels.ListGameSessionsViewModel>

@{
    ViewData["Title"] = "Sessões de Jogo";
}

@if (TempData["ResultMessage"] != null)
{
    var result = new Monolypix.Models.Result<object>
    {
        Success = (bool)(TempData["ResultSuccess"] ?? false),
        Message = TempData["ResultMessage"]?.ToString() ?? string.Empty
    };
    await Html.RenderPartialAsync("_Toast", result);
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">
                <i class="fas fa-gamepad me-2"></i>
                Sessões de Jogo
            </h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create")" class="btn btn-outline-primary">
                <i class="fas fa-plus me-2"></i>
                Iniciar nova sessão
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Nenhuma sessão de jogo encontrada.
        </div>
    }
    else
    {
        <!-- Desktop View - Table -->
        <div class="d-none d-lg-block">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">
                                        <i class="fas fa-tag me-1"></i>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th scope="col" class="text-center">
                                        <i class="fas fa-circle me-1"></i>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th scope="col" class="text-center">
                                        <i class="fas fa-users me-1"></i>
                                        @Html.DisplayNameFor(model => model.PlayerCount)
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-calendar-plus me-1"></i>
                                        @Html.DisplayNameFor(model => model.CreatedAt)
                                    </th>
                                    <th scope="col">
                                        <i class="fas fa-calendar-times me-1"></i>
                                        @Html.DisplayNameFor(model => model.EndedAt)
                                    </th>
                                    <th scope="col" class="text-center">
                                        <i class="fas fa-cog me-1"></i>
                                        Ações
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@session.Name</td>
                                        <td class="text-center">
                                            @if (session.IsActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Ativa
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    Inativa
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">
                                                @session.PlayerCount
                                            </span>
                                        </td>
                                        <td>@session.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (session.EndedAt.HasValue)
                                            {
                                                @session.EndedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Create", "Users", new { gameSessionId = session.Id })" class="btn btn-sm btn-outline-success me-1" title="Juntar-se à Sessão">
                                                <i class="fas fa-sign-in-alt"></i>
                                            </a>
                                            <a href="@Url.Action("Details", new { id = session.Id })" class="btn btn-sm btn-outline-primary me-1" title="Ver Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-outline-danger" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile View - Cards -->
        <div class="d-lg-none">
            @foreach (var session in Model)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-gamepad me-2"></i>
                                @session.Name
                            </h5>
                            @if (session.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Ativa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-times-circle me-1"></i>
                                    Inativa
                                </span>
                            }
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Jogadores</small>
                                        <strong>@session.PlayerCount</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-plus text-success me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Criado Em</small>
                                        <strong>@session.CreatedAt.ToString("dd/MM/yy")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (session.EndedAt.HasValue)
                        {
                            <div class="mb-3">
                                <i class="fas fa-calendar-times text-danger me-2"></i>
                                <small class="text-muted">Encerrado em:</small>
                                <strong>@session.EndedAt.Value.ToString("dd/MM/yyyy HH:mm")</strong>
                            </div>
                        }

                        <div class="d-grid gap-2 d-sm-flex">
                            <a href="@Url.Action("Create", "Users", new { gameSessionId = session.Id })" class="btn btn-sm btn-outline-success flex-fill">
                                <i class="fas fa-sign-in-alt me-1"></i>
                                Juntar
                            </a>
                            <a href="@Url.Action("Details", new { id = session.Id })" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="fas fa-eye me-1"></i>
                                Ver
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-warning flex-fill">
                                <i class="fas fa-edit me-1"></i>
                                Editar
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-danger flex-fill">
                                <i class="fas fa-trash me-1"></i>
                                Excluir
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
