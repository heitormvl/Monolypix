@model Monolypix.ViewModels.DetailGameSessionViewModel

@{
    ViewData["Title"] = "Detalhes da Sessão";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">
                <i class="fas fa-info-circle me-2"></i>
                Detalhes da Sessão
            </h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Session Info Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-gamepad me-2"></i>
                        Informações da Sessão
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-tag text-primary me-3 mt-1"></i>
                                <div>
                                    <small class="text-muted d-block">Nome</small>
                                    <h5 class="mb-0">@Model.Name</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-circle text-primary me-3 mt-1"></i>
                                <div>
                                    <small class="text-muted d-block">Status</small>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Ativa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times-circle me-1"></i>
                                            Inativa
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-calendar-plus text-success me-3 mt-1"></i>
                                <div>
                                    <small class="text-muted d-block">Criado Em</small>
                                    <strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-calendar-times text-danger me-3 mt-1"></i>
                                <div>
                                    <small class="text-muted d-block">Encerrado Em</small>
                                    @if (Model.EndedAt.HasValue)
                                    {
                                        <strong>@Model.EndedAt.Value.ToString("dd/MM/yyyy HH:mm")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Players Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        Jogadores
                    </h5>
                    <span class="badge bg-primary">
                        @Model.Players.Count
                    </span>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Players.Any())
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-user-slash fa-3x mb-3 d-block"></i>
                            <p class="mb-0">Nenhum jogador nesta sessão ainda.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Desktop View - Table -->
                        <div class="d-none d-md-block">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">
                                                <i class="fas fa-user me-1"></i>
                                                Jogador
                                            </th>
                                            <th scope="col" class="text-center">
                                                <i class="fas fa-wallet me-1"></i>
                                                Saldo
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var player in Model.Players)
                                        {
                                            <tr>
                                                <td class="fw-semibold">
                                                    <i class="fas fa-user-circle me-2" style="color: @player.AvatarColor"></i>
                                                    @player.UserName
                                                    @if (player.IsBanker)
                                                    {
                                                        <span class="badge bg-warning text-dark ms-2">
                                                            <i class="fas fa-crown me-1"></i>Banqueiro
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-success">
                                                        M$ @player.Wallet.Balance.ToString("N2")
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Mobile View - Cards -->
                        <div class="d-md-none">
                            @foreach (var player in Model.Players)
                            {
                                <div class="border-bottom p-3">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle fa-2x me-3" style="color: @player.AvatarColor"></i>
                                            <div>
                                                <h6 class="mb-0">@player.UserName</h6>
                                                @if (player.IsBanker)
                                                {
                                                    <span class="badge bg-warning text-dark mt-1">
                                                        <i class="fas fa-crown me-1"></i>Banqueiro
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <span class="badge bg-success">
                                            <i class="fas fa-wallet me-1"></i>
                                            M$ @player.Wallet.Balance.ToString("N2")
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Ações
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-warning">
                            <i class="fas fa-edit me-2"></i>
                            Editar Sessão
                        </a>
                        @if (Model.IsActive)
                        {
                            <a href="#" class="btn btn-outline-danger">
                                <i class="fas fa-stop-circle me-2"></i>
                                Encerrar Sessão
                            </a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-outline-success">
                                <i class="fas fa-play-circle me-2"></i>
                                Reativar Sessão
                            </a>
                        }
                        <hr class="my-2">
                        <a href="#" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>
                            Excluir Sessão
                        </a>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Estatísticas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">
                                <i class="fas fa-users me-2"></i>
                                Total de Jogadores
                            </span>
                            <strong>@Model.Players.Count</strong>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">
                                <i class="fas fa-wallet me-2"></i>
                                Saldo Total
                            </span>
                            <strong class="text-success">
                                M$ @Model.Players.Sum(p => p.Wallet.Balance).ToString("N2")
                            </strong>
                        </div>
                    </div>
                    @if (Model.EndedAt.HasValue && Model.EndedAt > Model.CreatedAt)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">
                                    <i class="fas fa-clock me-2"></i>
                                    Duração
                                </span>
                                <strong>
                                    @((Model.EndedAt.Value - Model.CreatedAt).Days) dias
                                </strong>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
