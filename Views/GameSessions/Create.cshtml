@model Monolypix.ViewModels.CreateGameSessionViewModel

@{
    ViewData["Title"] = "Criar Nova Sessão";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">
                <i class="fas fa-plus-circle me-2"></i>
                Criar Nova Sessão
            </h1>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Voltar
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag me-1"></i>
                                @Html.DisplayNameFor(m => m.Name)
                            </label>
                            <input asp-for="Name" 
                                   class="form-control form-control-lg" 
                                   placeholder="Digite o nome da sessão"
                                   autocomplete="off"
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-2"></i>
                                Criar Sessão
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Dica:</strong> Escolha um nome descritivo para identificar facilmente esta sessão de jogo.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
